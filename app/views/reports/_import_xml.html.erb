<%= form_with(model: @report, local: true) do |form| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "erro") %> proíbe este relatório de ser salvo:</h2>

      <ul>
        <% @report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="py-5">
    <h1>Importar arquivo XML</h1>

    <div class="form-group">
      <strong><%= form.label :xml_file, 'Escolha um arquivo XML para upload:' %></strong>
      <%= form.file_field :xml_file %>
    </div>
    <div class="actions">
      <%= form.submit "Importar XML", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
